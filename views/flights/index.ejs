<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="stylesheets/style.css">
  <title>Flights</title>
</head>
<body>
  <nav>
    <button class="nav-button">
      <a href="/flights"> ALL FLIGHTS</a>
    </button>
    <button class="nav-button">
      <a href="/flights/new">ADD FLIGHT</a>
    </button>
    <button class="nav-button">
      <a href="/meals/new">ADD MEAL</a>
    </button>
  </nav>
  <h1>All Flights</h1>
  <table>
  <tr>
    <th>Airline</th>
    <th>Airport</th>
    <th>Flight No</th>
    <th>Departs</th>
    <th>Details</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% flights.forEach(flight => { %>
    <tr>
      <td><%= flight.airline %></td>
      <td><%= flight.airport %></td>
      <td><%= flight.flightNo %></td>
      <td><%= flight.departs %></td>
      <td>
        <a href="/flights/<%= flight._id %>">DETAILS</a>
      </td>
      <td>
        <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST" class="delete-form">
          <button type="submit">X</button>
        </form>
      </td>
    </tr>
  <% }) %>
</tbody>
  </table>
  <a href="flights/new">Add Flight</a>
    </body>
</html>