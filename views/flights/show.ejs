<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Flight Information</title>
</head>
<body>
  <nav>
    <button class="nav-button">
      <a href="/flights"> ALL FLIGHTS</a>
    </button>
    <button class="nav-button">
      <a href="/flights/new">ADD FLIGHT</a>
    </button>
    <button class="nav-button">
      <a href="/meals/new">ADD MEAL</a>
    </button>
  </nav>
  <h1>Flight Details </h1>
  <a href="/flights/<%= flight._id%>/edit">
    <button>Edit Flight</button>
    </a>
  <section>
    <div>Airline:</div>
    <div><%= flight.airline %></div>
    <div>Airport:</div>
    <div><%= flight.airport %></div>
    <div>Flight Number:</div>
    <div><%= flight.flightNo %></div>
    <div>Date:</div>
    <div><%= flight.departs %></div>
  </section>
  <a href="/flights">View All Flights</a>
  <section>
    <% // new markup below %>
    <h2> Tickets </h2>
    <form id="add-review-form" action="/flights/<%= flight._id %>/tickets"
    method="POST">
  
    <div>
      <label for="seat-select">Seat</label>
      <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    </div>
    <label for="price-input"> Price:</label>
    <span> &#36; </span>
    <input type="text" name="price" id="price-input"> 
    <button type="submit">Add Ticket</button>
  </form>
  </section>
  <% if (flight.tickets.length) { %>
    <h3>Tickets Purchased</h3>
    <table>
      <thead>
        <tr>
          <th>Date Purchased</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td> <%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
            <form action="/flights/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
              <td> <button type="submit">Remove</button></td>

            </form>
          </tr>
        <% }) %>
      </tbody>
    </table>
  
  <% } else { %>
    <h3>No tickets have been purchased</h3>
  <% } %>
</body>
</html>